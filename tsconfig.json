{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "src",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
